<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Olutoyosi.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             Title="Home Page">

    <StackLayout Spacing="10" Padding="16, 180" >
        <Label Text="Login" FontSize="21" HorizontalTextAlignment="Center" Margin="0,0,0,40"/>
        <Entry x:Name="username" Placeholder="Enter username"/>
        <Entry x:Name="password" IsPassword="True" Placeholder="Enter password"/>
        <Button Text="Login" BorderWidth="1" BorderColor="#007AFF " Clicked="Button_Clicked" Margin="0,40,0,0"/>
        <Label x:Name="lblError" Text="" Margin="0, 10, 0, 0"  Padding="10, 7, 10, 7" IsVisible="false"/>
    </StackLayout>

</ContentPage>

